<resources>
    <!-- Base application theme. -->
    <style name="Theme.Skillcinema" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Skillcinema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Skillcinema.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Skillcinema.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/graphik_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="BlueProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/app_blue</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>


    <style name="Theme.Skillcinema.EditText">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorAccent">@color/app_blue</item>
    </style>

    <style name="SpinnerStyle">
        <item name="colorAccent">@color/app_blue</item>
        <item name="colorControlNormal">@color/grey_text</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.Material3.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/app_blue_transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/graphik_medium</item>
        <item name="android:fontFamily">@font/graphik_medium</item>
    </style>

    <style name="TripleButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/chip_color</item>
        <item name="android:textAppearance">@style/SkillcinemaText.Medium</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black_text</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="BlueButtonStyle" parent="Theme.AppCompat">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAppearance">@style/SkillcinemaText.Medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>