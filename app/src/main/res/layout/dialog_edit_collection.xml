<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="308dp"
    android:layout_height="240dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="16dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_dialog_profile"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@color/transparent"
        android:gravity="top"
        android:hint="@string/dialog_hint_profile"
        android:padding="4dp"
        android:textColor="@color/black_text"
        android:textColorHint="@color/hint_color"
        app:hintTextAppearance="@style/SkillcinemaText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/done_dialog_profile"
        style="@style/BlueButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="24dp"
        android:text="@string/done_dialog_profile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_edit_dialog"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22dp"
        android:clickable="true"
        android:src="@drawable/ic_x"
        android:tint="@color/black_text"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.cardview.widget.CardView>