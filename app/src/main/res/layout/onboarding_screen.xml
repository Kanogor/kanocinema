<?xml version="1.0" encoding="utf-8"?><!-- Slide item layout TODO -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_picture"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/picture_splash" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/onboarding_text"
        style="@style/SkillcinemaText.OnboardingBigText"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="27dp"
        android:text="@string/onboarding_first_page" />

</LinearLayout>